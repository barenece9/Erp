<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="420dp"
    android:padding="10dp"
    android:gravity="center"
    android:background="@drawable/login_bg1"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:gravity="center"
        android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="12dp"
        android:text="DATE"
        android:textColor="#000000"
        android:layout_gravity="center_vertical"
        android:paddingTop="2dp"
        android:id="@+id/rep_emp_name"
        android:layout_marginTop="10dp"
        android:visibility="visible"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@null"
        android:editable="false"
        android:textSize="12dp"
        android:textColor="#000000"
        android:layout_gravity="center_vertical"
        android:text="23/04/2017"
        android:paddingTop="2dp"
        android:id="@+id/leave_frm_dt"
        android:visibility="visible"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@null"
        android:editable="false"
        android:textSize="12dp"
        android:textColor="#000000"
        android:layout_gravity="center_vertical"
        android:text="Present"
        android:paddingTop="2dp"
        android:id="@+id/leave_to_dt"
        android:visibility="visible"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="12dp"
        android:text="DATE"
        android:textColor="#000000"
        android:layout_gravity="center_vertical"
        android:paddingTop="2dp"
        android:id="@+id/leave_frm_dt_st"
        android:visibility="visible"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@null"
        android:editable="false"
        android:textSize="12dp"
        android:textColor="#000000"
        android:layout_gravity="center_vertical"
        android:text="23/04/2017"
        android:paddingTop="2dp"
        android:id="@+id/leave_to_dt_st"
        android:visibility="visible"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@null"
        android:editable="false"
        android:textSize="12dp"
        android:textColor="#000000"
        android:layout_gravity="center_vertical"
        android:text="Present"
        android:paddingTop="2dp"
        android:id="@+id/number_of_days"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="12dp"
        android:text="DATE"
        android:textColor="#000000"
        android:layout_gravity="center_vertical"
        android:paddingTop="2dp"
        android:id="@+id/leave_type_name"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@null"
        android:editable="false"
        android:textSize="12dp"
        android:textColor="#000000"
        android:layout_gravity="center_vertical"
        android:text="23/04/2017"
        android:paddingTop="2dp"
        android:id="@+id/dt_created"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@null"
        android:editable="false"
        android:textSize="12dp"
        android:textColor="#000000"
        android:layout_gravity="center_vertical"
        android:text="Present"
        android:paddingTop="2dp"
        android:id="@+id/approval_status_name"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="OK"
        android:id="@+id/btn_dialog"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/text_dialog"
        android:layout_centerHorizontal="true"
        android:theme="@style/AppTheme.Button"
        android:textColor="#ffffffff" />


</LinearLayout>
