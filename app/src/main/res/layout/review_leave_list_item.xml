<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="6dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="6dp"
        card_view:cardCornerRadius="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:background="@color/accent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:background="#ffffff"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="12dp"
                android:text="Baren"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:paddingTop="2dp"
                android:id="@+id/emp_name"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textSize="12dp"
            android:text="DATE"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:paddingTop="2dp"
            android:id="@+id/rep_emp_name"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@null"
            android:editable="false"
            android:textSize="12dp"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:text="23/04/2017"
            android:paddingTop="2dp"
            android:id="@+id/leave_frm_dt"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@null"
            android:editable="false"
            android:textSize="12dp"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:text="Present"
            android:paddingTop="2dp"
            android:id="@+id/leave_to_dt"
            android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="12dp"
                android:text="DATE"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:paddingTop="2dp"
                android:id="@+id/leave_frm_dt_st"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@null"
                android:editable="false"
                android:textSize="12dp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:text="23/04/2017"
                android:paddingTop="2dp"
                android:id="@+id/leave_to_dt_st"
                android:visibility="gone"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@null"
                android:editable="false"
                android:textSize="12dp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:text="Present"
                android:paddingTop="2dp"
                android:id="@+id/number_of_days"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="12dp"
                android:text="DATE"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:paddingTop="2dp"
                android:id="@+id/leave_type_name"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@null"
                android:editable="false"
                android:textSize="12dp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:text="23/04/2017"
                android:paddingTop="2dp"
                android:id="@+id/dt_created"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@null"
                android:editable="false"
                android:textSize="12dp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:text="Present"
                android:paddingTop="2dp"
                android:id="@+id/approval_status_name"/>



        </LinearLayout>

            <Button
                android:layout_width="80dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:id="@+id/btn_action"
                android:textColor="@color/icons"
                android:layout_margin="2dp"
                android:theme="@style/AppTheme.Button"
                android:text="Action"/>


            <!--<Button
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/btn_action"
                android:layout_alignLeft="@+id/btn_action"
                android:id="@+id/btn_open"
                android:visibility="visible"
                android:background="@drawable/double_down"/>

            <Button
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_alignLeft="@+id/btn_action"
                android:layout_alignParentBottom="true"
                android:id="@+id/btn_close"
                android:visibility="gone"
                android:background="@drawable/double_up"/>-->

        </RelativeLayout>





    </android.support.v7.widget.CardView>

</LinearLayout>
