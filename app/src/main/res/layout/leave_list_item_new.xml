            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@null"
                android:editable="false"
                android:textSize="12dp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:text="23/04/2017"
                android:paddingTop="2dp"
                android:id="@+id/leave_to_dt_st"
                android:visibility="gone"/>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@null"
                android:editable="false"
                android:textSize="12dp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:text="Present"
                android:paddingTop="2dp"
                android:id="@+id/number_of_days"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:textSize="12dp"
                android:text="DATE"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:paddingTop="2dp"
                android:id="@+id/leave_type_name"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="@null"
                android:editable="false"
                android:textSize="12dp"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:text="23/04/2017"
                android:paddingTop="2dp"
                android:id="@+id/dt_created"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp">

               <!-- <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="@null"
                    android:editable="false"
                    android:textSize="12dp"
                    android:textColor="#000000"
                    android:layout_gravity="center_vertical"
                    android:text="Present"
                    android:paddingTop="2dp"
                    android:id="@+id/approval_status_name"/>-->

                <Button
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"

                    android:id="@+id/btn_open"
                    android:visibility="visible"
                    android:background="@drawable/double_down"/>

                <Button
                    android:layout_width="50dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"

                    android:id="@+id/btn_close"
                    android:visibility="gone"
